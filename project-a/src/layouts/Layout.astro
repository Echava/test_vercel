---
import AsideMenu from '../components/AsideMenu.astro'
import Footer from '../components/Footer.astro'
const { title } = Astro.props
---
<!doctype html>
<html lang="en">
    <head>
        <!-- Meta información básica -->
        <meta charset="UTF-8">  
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/public/styles/global.css">
        <title>{title}</title>
    </head>
    <body class="h-full bg-zinc-700">
        <div id="app" class="h-full p-2 gap-2">
            
            <aside class="grid-area-aside flex-col flex overflow-y-auto">                
                <AsideMenu />
            </aside>

            <main class="grid-area-main rounded-lg bg-gradient-to-t bg-zinc-500 w-full">
                <slot />
            </main>

            <footer class="grid-area-footer min-h-[100px] bg-customGreen text-gray-100">
                <Footer />
            </footer>

        </div>
    </body>
</html>

