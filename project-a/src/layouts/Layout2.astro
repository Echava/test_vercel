---
import { ViewTransitions } from 'astro:transitions';
import MenuController from '../components/MenuController.svelte';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/public/styles/global2.css">
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="layout">
      <header class="header">
        <MenuController client:load />
        <h1 class="text-xl font-semibold ml-4">{title}</h1>
      </header>

      <main class="main">
        <slot />
      </main>

      <footer class="footer">
        <p>&copy; 2024 Data Analysis App. Todos los derechos reservados.</p>
      </footer>
    </div>
  </body>
</html>







