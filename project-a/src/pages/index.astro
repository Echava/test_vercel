---
// Importa el Layout
import Layout from "../layouts/Layout.astro";
// Importa el componente que maneja el botón de Admin
import RoleBasedContent from "../components/RoleBasedContent.svelte";
import UploadButton from "../components/UploadButton.svelte";
import HeadersList from "../components/HeadersList.svelte";
---
<Layout title="Project-a">

  <div class="flex flex-col items-center justify-center min-h-screen p-4">
    <div class="w-full max-w-xl">
      <h1 class="text-gray-800 text-4xl text-center">
        DESCARGA DE REPORTES
      </h1>
      <div class="mt-10 flex flex-col items-center w-full space-y-2">     
        
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
          Descargar
        </button>
        <div>      
        <!-- Role-based content: Solo se mostrará si el rol es 'admin' -->
        <RoleBasedContent client:load/>
        </div> 
        <div>
        <UploadButton client:load/>  
        </div>
        <div>
        <HeadersList client:load/>
        </div>    
      </div>
    </div>    
  </div>
    
</Layout>

