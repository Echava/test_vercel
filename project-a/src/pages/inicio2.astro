---
import Layout from '../layouts/Layout2.astro';
import { FileUp, Settings, BarChart2, HelpCircle } from 'lucide-svelte';

const quickActions = [
  { title: 'Cargar nuevo archivo', icon: FileUp, href: '/cargar-excel' },
  { title: 'Configurar reglas', icon: Settings, href: '/rules' },
  { title: 'Iniciar análisis', icon: BarChart2, href: '/analyze' },
  { title: 'Ver instrucciones', icon: HelpCircle, href: '/instructions' },
];
---

<Layout title="Inicio | Analizador de Datos">
  <main class="flex-grow flex flex-col justify-center">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold text-center mb-8">Bienvenido al Analizador de Datos</h1>
      
      <p class="text-xl text-center mb-12 max-w-2xl mx-auto">
        Selecciona una acción para comenzar tu análisis de datos o explorar las funcionalidades de la aplicación.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {quickActions.map((action) => (
          <a 
            href={action.href}
            class="flex flex-col items-center justify-center p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 ease-in-out"
          >
            <action.icon size={48} class="mb-4 text-blue-500" />
            <h2 class="text-xl font-semibold text-center">{action.title}</h2>
          </a>
        ))}
      </div>

      <div class="mt-12 text-center">
        <a 
          href="/analyze" 
          class="inline-block bg-blue-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-600 transition-colors duration-300 ease-in-out"
        >
          Comenzar Análisis
        </a>
      </div>
    </div>
  </main>
</Layout>

